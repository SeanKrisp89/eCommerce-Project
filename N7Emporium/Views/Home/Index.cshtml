@{
    Layout = null; //this is how I would break the relationship of the view to the shared layout!!!
    ViewData["Title"] = "Welcome to the N7 Emporium";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - N7Emporium</title>
    <link href="https://fonts.googleapis.com/css?family=Days+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Black+Ops+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body style="background-color: black;" class="home-bg">
    <div class="hide-desktop">
        <nav class="navbar fixed-top navbar-expand-lg" style="background-color: #000000;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link"><img src="https://cdn.shopify.com/s/files/1/0030/3802/products/n7_white_decal_1.jpg?v=1464398027" alt="N7" style="width: 80px;" /></a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Shop
                        </a>
                        <div style="background: black;" class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Weapons">Weapons</a>
                            <a class="dropdown-item" href="/Armor">Armor</a>
                            <a class="dropdown-item" href="/Ships">Ships</a>
                        </div>
                    </li>
                </ul>
                <span style="margin-left: -10%; font-family: 'Black Ops One'; font-size: 1.7em;" class="navbar-text text-sm-center">N7 EMPORIUM</span>
                <partial name="_LoginPartial" />
            </div>
        </nav>

        <div class="container-fluid home-div-pos">
            <h1 class="red-text home-welcome home-welcome-pos">Welcome to</h1>
            <img src="~/images/AnimationN7.png" class="home-image home-n7-pos" />
        </div>


        <!--*********CAROUSEL**********-->
        <div style="margin-top: 6%;" class="container home-carousel">
            <div class="row">
                <div class="col">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div style="border: 10px solid black; border-radius: 30px;" class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/images/ME3_Adas_Anti-Synthetic_Assault_Rifle.png" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5 class="red-text">Adas Anti-Synthetic Rifle</h5>
                                    <a class="red-text carousel-link" href="/Weapons"><p>Shop Weapons</p></a>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/images/ME3_armax_arsenal_set.png" alt="Second slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5 class="red-text">Armax Arsenal Armor</h5>
                                    <a class="red-text carousel-link" href="/Armor"><p>Shop Armor</p></a>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/images/Normandy1.png" alt="Third slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5 class="red-text">Normandy SR-1</h5>
                                    <a class="red-text carousel-link" href="/Ships"><p>Shop Ships</p></a>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!--**********MOBILE DISPLAY BELOW*************-->
        <div class="hide-mobile">
            <nav class="navbar fixed-top navbar-expand-lg" style="background-color: #000000;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link"><img src="https://cdn.shopify.com/s/files/1/0030/3802/products/n7_white_decal_1.jpg?v=1464398027" alt="N7" style="width: 80px;" /></a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Shop
                            </a>
                            <div style="background: black;" class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Weapons">Weapons</a>
                                <a class="dropdown-item" href="/Armor">Armor</a>
                                <a class="dropdown-item" href="/Ships">Ships</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </nav>

            <div class="container-fluid home-div-pos">
                <h1 class="red-text home-welcome mb-homewlc-pos mb-home-font">Welcome to</h1>
                <img src="~/images/AnimationN7.png" class="home-image mb-home-image" />
            </div>
        </div>


        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

</body>
</html>

